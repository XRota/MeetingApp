@model UserInfo
@{
    ViewBag.Title = "Başvuru Durumu";
}
<main class="text-center">
    <h1 class="h4">Toplantı Özeti</h1>

    @if(Model.WillAttend==true)
    {
        <p>@Model.Name toplantıya katılmayı kabul ettiniz.</p>
        <p>Toplantıya sizin ile birlikte @ViewBag.UserCount kişi katılıyor</p>
    <a class="btn btn-sm btn-outline-primary " asp-controller="Meeting" asp-action="List">Katılımcıları listele</a>
    }
    else
    {
        <p>@Model.Name toplantıya katılmayı reddettiniz.</p>
        <a class="btn btn-sm btn-outline-primary " href="/">Ana sayfaya dön</a>
    }
    
</main>